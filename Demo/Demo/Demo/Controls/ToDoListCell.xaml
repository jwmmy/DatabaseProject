<forms:ViewCell
    xmlns:forms="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.Core"
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Demo.Controls.ToDoListCell">
    <StackLayout Orientation="Horizontal"
			VerticalOptions="Start" >
        <Image x:Name="imgPhoto" Source="notebook.PNG" 
			HeightRequest="80"
			WidthRequest="80"/>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <Label x:Name="labelSerialNo" Text="{Binding CheckListValue.Serial_No}" 
				FontSize="22"/>
            <StackLayout Orientation="Horizontal" >
                <Label x:Name="labelName" Text="倉儲檢查日表" HorizontalOptions="Start"/>
                <Label x:Name="labelVersion" Text="A3" HorizontalOptions="Start"/>
            </StackLayout >
        </StackLayout>
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="CellTapped" />
        </StackLayout.GestureRecognizers>
    </StackLayout>
</forms:ViewCell>

